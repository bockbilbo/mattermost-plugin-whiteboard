{
  "id": "mattermost-plugin-whiteboard",
  "name": "Whiteboard",
  "description": "Virtual whiteboard integration for Mattermost",
  "version": "0.1.0",
  "min_server_version": "5.12.0",
  "server": {
    "executables": {
      "linux-amd64": "server/dist/plugin-linux-amd64",
      "darwin-amd64": "server/dist/plugin-darwin-amd64",
      "windows-amd64": "server/dist/plugin-windows-amd64.exe"
    }
  },
  "webapp": {
    "bundle_path": "webapp/dist/main.js"
  },
  "settings_schema": {
    "header": "This plugin is compatible with [cracker0dks' whiteboard](https://github.com/cracker0dks/whiteboard), [Excalidraw](https://github.com/excalidraw/excalidraw) and [WBO](https://github.com/lovasoa/whitebophir).",
    "footer": "",
    "settings": [
      {
        "key": "WhiteboardTool",
        "display_name": "Whiteboard Tool",
        "type": "dropdown",
        "help_text": "Your preferred whiteboard backend. If using a self-hosted server, make sure to choose the right tool.",
        "default": "wbo",
        "options": [
          {
            "display_name": "cracker0dks' whiteboard",
            "value": "cracker0dks"
          },
          {
            "display_name": "Excalidraw",
            "value": "excalidraw"
          },
          {
            "display_name": "WBO",
            "value": "wbo"
          }
        ]
      },
      {
        "key": "WhiteboardURL",
        "display_name": "Custom URL",
        "type": "text",
        "help_text": "The URL of your self-hosted server for of any of the three tools. If empty, the plugin will link to the public test servers provided by the tool developers.",
        "placeholder": "https://whiteboard.yourdomain.tld"
      }
    ]
  }
}
